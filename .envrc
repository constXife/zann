use flake

ZANN_DESKTOP_DIR="$PWD/apps/desktop"
PATH_add "$ZANN_DESKTOP_DIR/node_modules/.bin"

if [ -f "$ZANN_DESKTOP_DIR/package.json" ] && [ ! -d "$ZANN_DESKTOP_DIR/node_modules" ] && [ -z "$ZANN_SKIP_BUN_INSTALL" ]; then
  echo "apps/desktop: installing bun deps (set ZANN_SKIP_BUN_INSTALL=1 to skip)"
  (cd "$ZANN_DESKTOP_DIR" && bun install)
fi
